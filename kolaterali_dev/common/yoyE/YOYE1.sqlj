    public BigDecimal getMiddRate(BigDecimal cur_id) throws SQLException{
        BigDecimal midd_rate = null;
        try{
            #sql[ctx] {
                SELECT midd_rate
                INTO :midd_rate
                FROM exchange_rate e
                WHERE cur_id = :(cur_id)
                AND current date between date_from and date_until
